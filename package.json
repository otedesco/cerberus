{
  "name": "@otedesco/cerberus",
  "version": "0.0.12",
  "description": "",
  "main": "dist/index.js",
  "private": true,
  "keywords": [],
  "author": "Oswaldo Tedesco <oswaldo.tedesco@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/otedesco/cerberus"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://ghcr.io"
  },
  "engines": {
    "pnpm": ">=8.6.10"
  },
  "scripts": {
    "start": "pnpm run build && cross-env NODE_ENV=production node dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "swc src -d dist --source-maps --copy-files",
    "type:check": "tsc --noEmit",
    "format": "prettier \"src/**/*.ts\" --write",
    "format:check": "prettier \"src/**/*.ts\" --check",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/ --fix",
    "lint:check": "eslint --ignore-path .gitignore --ext .ts src/",
    "test": "jest --forceExit --detectOpenHandles --passWithNoTests",
    "test:coverage": "jest --forceExit --detectOpenHandles --coverage",
    "seed": "knex seed:run --knexfile=knexfile.ts --verbose",
    "migrate": "knex migrate:latest --knexfile=knexfile.ts --verbose",
    "rollback": "knex migrate:rollback --knexfile=knexfile.ts --verbose",
    "make:seeder": "knex seed:make --knexfile=knexfile.ts -x ts --env development",
    "make:migration": "knex migrate:make --knexfile=knexfile.ts -x ts --env development",
    "commit": "pnpm changeset",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.84",
    "@types/ajv": "^1.0.0",
    "@types/bluebird": "^3.5.42",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/lodash": "^4.14.198",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.49.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@otedesco/cache": "^0.0.7",
    "@otedesco/commons": "^0.0.5",
    "@otedesco/notify": "^0.0.3",
    "@otedesco/server-utils": "^0.0.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "bluebird": "^3.7.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "knex": "^2.5.1",
    "lodash": "^4.17.21",
    "objection": "^3.1.1",
    "objection-db-errors": "^1.1.2",
    "pg": "^8.11.3"
  }
}